<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".ResultActivity"
    android:background="@color/white">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textHomepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Homepage"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome back"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you doing today?"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/jempolBawahButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_thumb_down_off_alt_24"
            style="@style/CustomRoundedButton"
            android:backgroundTint="@color/red"
            android:layout_marginRight="12dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/jempolAtasButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/baseline_thumb_up_off_alt_24"
            style="@style/CustomRoundedButton"
            android:backgroundTint="@color/green"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>

</LinearLayout>